@using Core.Helpers;
@model WebApplication.Models.HomeModel;
@{
    Layout=null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lohyna</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
</head>
<body class = "container-fluid">
    <header>
        <nav class="navbar navbar-custom navbar-expand-lg navbar-dark fixed-top scrolling-navbar">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a asp-controller="Home" asp-action="Index" class="navbar-brand mr-0 ml-sm-4">
                <img src="/images/Logo.png" id="logo" class="d-inline-block align-top"/>
            </a>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                <form class="form-inline my-2 ml-auto my-lg-0 justify-content-center" method="POST" asp-controller="Account" asp-action="Login">
                    <input class="form-control mr-sm-2 my-sm-2 mb-2" type="text" placeholder="Username">
                    <input class="form-control input-sm mr-sm-2 my-sm-2 mb-2" type="password" placeholder="Password">
                    <button class="btn btn-primary" id="btn" type="submit">Log in</button>
                </form>
                
                <button class="btn btn-primary" id="btn" data-toggle="modal" data-target="#modalRegisterForm">Register</button>
            </div>
        </nav>
                <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <form asp-controller="Account" asp-action="Register" method="POST">
                    <div class="validation" asp-validation-summary="ModelOnly" />
                    <div class="modal-content">
                      <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Register</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body mx-3">
                        <div class="md-form mb-3">
                          <input class="form-control" asp-for="Name" type="text" placeholder="Your name">
                          <span asp-validation-for="Name"/>
                        </div>

                        <div class="md-form mb-3">
                          <input class="form-control" asp-for="Surname" type="text" placeholder="Your surname">
                          <span asp-validation-for="Surname"/>
                        </div>

                        <div class="md-form mb-3">
                          <input class="form-control" asp-for="Username" type="text" placeholder="Your username">
                          <span asp-validation-for="Username"/>
                        </div>

                        <div class="md-form mb-3">
                          <input class="form-control" asp-for="Password" type="password" placeholder="Your password">
                          <span asp-validation-for="Password"/>
                        </div>

                        <div class="md-form mb-3">
                          <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Repeat password">
                          <span asp-validation-for="ConfirmPassword"/>
                        </div>

                      </div>
                      <div class="modal-footer d-flex justify-content-center">
                        <button class="btn btn-primary" type="submit">Register</button>
                      </div>
                    </div>
                    </form>
                  </div>
                </div>
    </header>
    @foreach (var (newsItem, imagePath) in Model.news)
{
    <div class="row justify-content-center my-4">
        <div class="col-sm-12 col-md-8 col-lg-6">
            <div class="card rounded shadow  justify-content-center card-news">
                <div class="card-body">
                    <h4 class="card-title text-center">
                        @newsItem.Title
                    </h4>
                    <img class="card-img-top py-2" src="@imagePath" alt="Photo news"/>
                    <p> @newsItem.Text </p>
                </div>
                <div class="card-footer container-fluid">
                    <div class="row">
                        <div class="text-left text-muted p-3 col align-middle">Posted @TimeHelper.TimeCreated(newsItem.TimePosted) ago</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
