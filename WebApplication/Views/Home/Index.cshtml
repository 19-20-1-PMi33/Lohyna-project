@using Core.Helpers;
@model WebApplication.Models.LogInModel;
@{
    Layout=null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lohyna</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class = "container-fluid">
    <header>
        <nav class="navbar navbar-custom navbar-expand-lg navbar-dark fixed-top scrolling-navbar">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a asp-controller="Home" asp-action="Index" class="navbar-brand mr-0 ml-sm-4">
                <img src="/images/Logo.png" id="logo" class="d-inline-block align-top"/>
            </a>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                <form class="form-inline my-2 ml-auto my-lg-0 justify-content-between" method="POST" asp-controller="Home" asp-action="Login" id = "loginForm">
                    <div class="mr-sm-2 my-sm-2 mb-2 d-flex flex-column">
                        <input class="form-control" type="text" asp-for="Username" placeholder="Username">
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="mr-sm-2 my-sm-2 mb-2 d-flex flex-column">
                        <input class="form-control" asp-for="Password" type="password" placeholder="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <a class="btn btn-primary mr-2" href="" role="button" type="submit" id="loginButton">Log in</a>
                    <a class="btn btn-primary" asp-controller="Register" asp-action="Index">Register</a>
                </form>
            </div>
        </nav>
    </header>
    <div class="content mt-4">
      <div role="main">
<div class="row d-flex justify-content-center">
<form method="POST" asp-action="FilterNewsByDate" asp-controller="Home">
      <div class="row d-flex justify-content-center">
          <div class="col-md-4 justify-content-end flex-row" >
            <div class="form-group w-100 d-inline-flex flex-row justify-content-end align-items-start ">
              <h5 class="mt-1">From:</h5>
              <input class="form-control w-75 ml-3" name = "startDate" type="date" required>
            </div>
          </div>
          <div class="col-md-4 d-flex justify-content-start">
            <div class="form-group w-100 d-inline-flex flex-row justify-content-end align-items-start ">
              <h5 class="mt-1">To:</h5>
              <input class="form-control w-75 ml-3 a" name = "endDate" type="date" required>
            </div>
          </div>
          <div><button type="submit" class="btn btn-dark text-uppercase">Filter news</button></div>
      </div>
      </form>
</div>
    @foreach (var (newsItem, imagePath) in Model.news)
{
    <div class="row justify-content-center my-4">
        <div class="col-sm-12 col-md-8 col-lg-6">
            <div class="card rounded shadow  justify-content-center card-news">
                <div class="card-body">
                    <h4 class="card-title text-center">
                        @newsItem.Title
                    </h4>
                    <img class="card-img-top py-2" src="@imagePath" alt="Photo news"/>
                    <p> @newsItem.Text </p>
                </div>
                <div class="card-footer container-fluid">
                    <div class="row">
                        <div class="text-left text-muted p-3 col align-middle">Posted @TimeHelper.TimeCreated(newsItem.TimePosted) ago</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</div>
</div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
