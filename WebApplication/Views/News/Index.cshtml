@using Core.Helpers
@model IEnumerable<(Core.DTO.News, string)>

@{
    ViewData["Title"] = ViewBag.User;
}


@section Styles
{
    <link rel="stylesheet" href="~/css/newsFeed.css">
}

<div class="row d-flex justify-content-center" id = "newsPage">
<form method="POST" asp-action="FilterNewsByDate" asp-controller="News">
      <div class="row d-flex justify-content-center">
          <div class="col-md-4 justify-content-end flex-row" >
            <div class="form-group w-100 d-inline-flex flex-row justify-content-end align-items-start ">
              <h5 class="mt-1">From:</h5>
              <input class="form-control w-75 ml-3" name = "startDate" type="date" required>
            </div>
          </div>
          <div class="col-md-4 d-flex justify-content-start">
            <div class="form-group w-100 d-inline-flex flex-row justify-content-end align-items-start ">
              <h5 class="mt-1">To:</h5>
              <input class="form-control w-75 ml-3 a" name = "endDate" type="date" required>
            </div>
          </div>
          <div><button type="submit" class="btn btn-dark text-uppercase">Filter news</button></div>
      </div>
      </form>
</div>
@foreach (var (newsItem, imagePath) in Model)
{
    <div class="row justify-content-center my-4">
        <div class="col-sm-12 col-md-8 col-lg-6">
            <div class="card rounded shadow  justify-content-center card-news">
                <div class="card-body">
                    <h4 class="card-title text-center">
                        @newsItem.Title
                    </h4>
                    <img class="card-img-top py-2" src="@imagePath" alt="Photo news"/>
                    <p> @newsItem.Text </p>
                </div>
                <div class="card-footer container-fluid">
                    <div class="row">
                        <div class="text-left text-muted p-3 col align-middle">Posted @TimeHelper.TimeCreated(newsItem.TimePosted) ago</div>
                        <div class="dropdown pr-3 align-middle">
                            <button class="btn btn-light dropdown-toggle shadow-sm mt-2" id="button-share" type="button" id="dropdownShareButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Share
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownShareButton">
                                <a class="dropdown-item text-share" href="#">With group</a>
                                <a class="dropdown-item text-share" href="#">With person</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</div>