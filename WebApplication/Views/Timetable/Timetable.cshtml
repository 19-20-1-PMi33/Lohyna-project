            <div class="justify-content-center row-scroll shadow mb-1">
                <div id="timetable-header">
                    <div class="border timetable-item-time">
                        <p>Time</p>
                    </div>
                    <div class="border timetable-item">
                        <p>Monday</p>
                    </div>
                    <div class="border timetable-item">
                        <p>Tuesday</p>
                    </div>
                    <div class="border timetable-item">
                        <p>Wednesdey</p>
                    </div>
                    <div class="border timetable-item">
                        <p>Thursday</p>
                    </div>
                    <div class="border timetable-item">
                        <p>Friday</p>
                    </div>
                </div>
                @for (int i = 1; i <= 5; ++i)
                {
                    <div class="timetable-row">
                        <div class="border timetable-item-time">
                            <p>@i</p>
                        </div>

                        @if (Model.ContainsKey(i))
                        {
                            @foreach (var z in Model[i])
                            {
                                if (z != null)
                                {
                                    <div class="border timetable-item">
                                        <a href="#myModal" data-backdrop="false" data-toggle="modal">
                                            <p>Subject : @z.SubjectID Lecturer: @z.LecturerID</p>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="border timetable-item">
                                    </div>
                                }
                            }
                        }
                        else
                        {
                            for (int j = 0; j < 5; ++j)
                            {
                                <div class="border timetable-item">
                                </div>
                            }
                        }
                    </div>

