@model WebApplication.Models.ProfileViewModel
@{
    ViewData["Title"]="Profile";
}
@section Styles
{
  <link rel="stylesheet" href="~/css/profile.css" />
}
<div id="profilePage">
   <div class="row">
      <div class="col-6 col-md-4 col-lg-2 px-md-3 px-sm-0 pt-3">
         <img alt="Profile photo" src="@Model.Person.Photo" class="img-fluid img-thumbnail rounded" />
      </div>
      <div class="col-6 col-md-8 col-lg-7 px-md-2 px-sm-0">
         <div class="row">
            <p class="info-name">@Model.Person.Name @Model.Person.Surname</p>
         </div>
         <div class="row">
            <p class="info-other">Faculty : @Model.Group.Faculty</p>
         </div>
         <div class="row">
            <p class="info-other">Group : @Model.Group.Name</p>
         </div>
      </div>
   </div>
   <div class="row p-3">
      <h4 class="mb-n3 block-title ml-3 px-2">Probably can be found at :</h4>
      <div class="card shadow-sm col-12 border-secondary block-profile">
         @if(String.IsNullOrEmpty(Model.FoundAt))
         {
         <h3 class="card-body text-right pt-4">User has no lessons at this time</h3>
         }
         else{
         <h3 class="card-body text-right pt-4">Auditory @Model.FoundAt</h3>
         }
      </div>
   </div>
   <div class="row p-3">
      <h4 class="mb-n3 block-title ml-3 px-2">Latest achievments :</h4>
      <div class="card shadow-sm col-12 border-secondary block-profile">
         @if(Model.Achievment.Id!=-1)
         {
         @if(!String.IsNullOrEmpty(Model.Achievment.Photo))
         {
         <div class="row card-body text-right pt-4">
            <div class="col-10 col-md-11 p-0 pr-1 my-auto">
               <h3>@Model.Achievment.Text</h3>
            </div>
            <div class="col-2  col-md-1 p-0 my-auto"><img class="img-fluid" style="max-height: 50px;" src="@Model.Achievment.Photo"></div>
         </div>
         }
         else
         {
         <h3 class="card-body text-right pt-4">@Model.Achievment.Text</h3>
         }
         }
         else
         {
         <h3 class="card-body text-right pt-4">User has no achievments yet :(</h3>
         }
      </div>
   </div>
   <div class="row p-3">
      <h4 class="mb-n3 block-title ml-3 px-2">Write @Model.Person.Name a message :</h4>
      <div class="card shadow-sm col-12 border-secondary block-profile pb-2">
         <form class="form-inline pt-4 pb-2">
            <div class="form-group col-9 col-md-10 col-lg-11 px-md-2 mb-0">
               <textarea type="text" class="form-control w-100 border-primary text-message" id="input-message"></textarea>
            </div>
            <button type="submit" class="btn btn-primary col-3 col-md-2 col-lg-1" id="button-message">Send</button>
         </form>
      </div>
   </div>
</div>