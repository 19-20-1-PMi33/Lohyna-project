@model WebApplication.Models.ProfileViewModel
@{
    ViewData["user"]= @Model.Username;
    ViewData["Title"]="Profile";
}
<link rel="stylesheet" href="~/css/profile.css" />
 <div class="row">
      <div class="col-6 col-md-4 col-lg-3 px-md-3 px-sm-0 pt-3">
        <img alt="Profile photo" src="/images/@Model.Photo" class="img-fluid img-thumbnail rounded" />
      </div>
      <div class="col-6 col-md-8 col-lg-7 px-md-2 px-sm-0">
          <div class="row">
              <p class="info-name">@Model.Name @Model.Surname</p>
          </div>
          <div class="row">
              <p class="info-other">Faculty : @Model.Faculty</p>
          </div>
          <div class="row">
              <p class="info-other">Group : @Model.Group</p>
          </div>
      </div>
    </div>
    <div class="row p-3">
      <h4 class="mb-n3 block-title ml-3 px-2">Probably can be found at :</h4>
      <div class="card shadow-sm col-12 border-secondary block-profile">
        <h3 class="card-body text-right pt-4">Lecture hall 439</h3>
      </div>
    </div>
    <div class="row p-3">
      <h4 class="mb-n3 block-title ml-3 px-2">Latest achievments :</h4>
      <div class="card shadow-sm col-12 border-secondary block-profile">
        <h3 class="card-body text-right pt-4">There are no achievments yet :(</h3>
      </div>
    </div>
    <div class="row p-3">
      <h4 class="mb-n3 block-title ml-3 px-2">Write @Model.Name a message :</h4>
      <div class="card shadow-sm col-12 border-secondary block-profile pb-2">
        <form class="form-inline pt-4 pb-2">
          <div class="form-group col-9 col-md-10 col-lg-11 px-md-2 mb-0">
            <textarea type="text" class="form-control w-100 border-primary text-message" id="input-message"></textarea>
          </div>
          <button type="submit" class="btn btn-primary col-3 col-md-2 col-lg-1" id="button-message">Send</button>
        </form>
      </div>
    </div>