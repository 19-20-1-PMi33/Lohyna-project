@model IEnumerable<Model.Note>

@{
    ViewData["Title"] = "Notes";
}

@section Styles
{
  <link rel="stylesheet" href="~/css/notesPageStyle.css">   
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <link rel="stylesheet" href="https://static.pingendo.com/bootstrap/bootstrap-4.3.1.css">
}
  <div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="row">
            <div class="col-md-12">
              <li class="border-0 list-group-item d-flex justify-content-between align-items-center"> <i class="fa fa-list-alt text-muted fa-lg"> All notes </i> <span class="badge badge-primary badge-pill">14</span></li>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <li class=" border-0 list-group-item d-flex justify-content-between align-items-center">
                <i class="fas fa-clipboard-check text-muted fa-lg"> Done </i>
                <span class="badge badge-primary badge-pill">8</span></li>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <li class=" border-0 list-group-item d-flex justify-content-between align-items-center">
                <i class="fas fa-fire text-muted fa-lg"> In progress </i><span class="badge badge-primary badge-pill">6</span></li>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col-md-12">
              <div class="accordion" id="accordionExample">
                <button class="btn btn-link text-body w-100 d-flex btn-block ml-1" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                  <i class="fas fa-filter text-muted fa-lg"> Sort by </i></button>
                <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                  <li class="border-0 list-group-item d-flex justify-content-between align-items-center ml-3"> <i class="fab fa-autoprefixer text-muted fa-lg"><b><b> Name </b></b></i></li>
                  <li class="border-0 list-group-item d-flex justify-content-between align-items-center ml-3"> <i class="fas fa-calendar-day text-muted fa-lg"> Created</i></li>
                  <li class="border-0 list-group-item d-flex justify-content-between align-items-center ml-3"> <i class="fas fa-stopwatch text-muted fa-lg"> Deadline</i></li>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="row align-items-start mb-3">
            <div class="col-md-4 justify-content-center d-flex"><a class="btn btn-secondary w-75 text-center text-uppercase" id="AddNote" type="button" data-toggle="modal" data-target="#AddNoteModal" href="#"><b>Add note</b></a></div>
          </div>
          <div class="row">
            @foreach (var note in Model)
            {
            <div class="col-md-4">
              <div class="card my-2">
                <div class="card-header d-flex bg-secondary text-light justify-content-between">
                  <a  class="text-light" type="button" data-toggle="modal" data-target="#AddNoteModal" href="#"><b>@note.Name</b></a>
                  <a href="#deleteNoteModal" class="delete" data-toggle="modal"><i class="fas fa-trash mt-1 text-danger" data-toggle="tooltip" title="Delete"></i>
                  </a>
                </div>
                <div class="card-body">
                  <p class="text-truncate">@note.Materials</p>
                </div>
                <div class="card-footer d-flex flex-row justify-content-around">
                  <p class="text-truncate"><b>@note.SubjectID</b></p>
                  <p class="text-truncate"><b>@note.Created</b></p>
                </div>
              </div>
            </div>
            }
          </div>
          <ul class="pagination d-flex justify-content-center align-items-center flex-grow-0 mt-2">
            <li class="page-item"> <a class="page-link" href="#">Prev</a> </li>
            <li class="page-item"> <a class="page-link" href="#">1</a> </li>
            <li class="page-item"> <a class="page-link" href="#">2</a> </li>
            <li class="page-item active"> <a class="page-link" href="#">3</a> </li>
            <li class="page-item"> <a class="page-link" href="#">4</a> </li>
            <li class="page-item"> <a class="page-link" href="#">Next</a> </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div id="AddNoteModal" class="modal fade align-items-center justify-content-center w-100" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Note Window</h5> <button type="button" class="close" data-dismiss="modal"> <span>×</span> </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <div class="row">
                <div class="col-md-2">
                  <h5 class="mt-1">Name:</h5>
                </div>
                <div class="col-md-10">
                  <input class="form-control" type="text" id="example-text-input">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 align-items-center">
                <div class="form-group d-inline-flex flex-row justify-content-between align-items-start flex-grow-0">
                  <h5 class="mt-1">Deadline:</h5>
                  <input class="form-control w-100 ml-3" type="date" id="example-datetime-local-input">
                </div>
              </div>
              <div class="col-md-6">
                <select class="form-control w-100">
                  <option value="" disabled="" selected="">Choose Subject</option>
                  <option value="1">Option 1</option>
                  <option value="2">Option 2</option>
                  <option value="3">Option 3</option>
                </select>
              </div>
            </div>
            <h5 class="">Note text:</h5>
            <div class="row">
              <div class="form-group w-100 mx-2">
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
            </div>
            <div class="row">
              <div class="form-group w-100 mx-3 d-flex flex-row justify-content-center align-items-center">
                <h5 class="mr-4">
                  <input type="radio" id="done" name="radio-group" checked="">
                  <label for="done">Done</label>
                </h5>
                <h5>
                  <input type="radio" id="progress" name="radio-group">
                  <label for="progress">In progress</label>
                </h5>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer d-flex flex-row justify-content-center"> <button type="button" class="btn btn-primary w-25">Save</button> <button type="button" class="btn btn-secondary w-25" data-dismiss="modal">Close</button> </div>
      </div>
    </div>
  </div>
  <!-- Delete Modal HTML -->
  <div id="deleteNoteModal" class="modal fade">
    <div id="deleteDialog" class="modal-dialog modal-md">
      <div class="modal-content">
        <form>
          <div class="modal-header">
            <h4 class="modal-title">Delete Note</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          </div>
          <div class="modal-body" id="deleteBody">
            <p>Are you sure you want to delete this note?</p>
            <p class="text-danger"><small><b>This action cannot be undone.</b></small></p>
          </div>
          <div class="modal-footer">
            <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
            <input type="submit" class="btn btn-danger" value="Delete">
          </div>
        </form>
      </div>
    </div>
  </div>