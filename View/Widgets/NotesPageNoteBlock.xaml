<UserControl x:Class="View.Widgets.NotesPageNoteBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="560"
             Height="56" Cursor="Hand">
    <Grid x:Name="grid" Background="#f9f9f9" Margin="0 3 0 3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="check" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="textDate" Grid.Column="1" FontSize="15" VerticalAlignment="Center" TextAlignment="Center"/>
        <TextBlock x:Name="textSubject" Grid.Column="2" FontSize="15" VerticalAlignment="Center" TextAlignment="Center"/>
        <TextBlock x:Name="textTitle" Grid.Column="3" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <RichTextBox x:Name="textNote" Grid.Column="4" FontSize="15" IsReadOnly="True"/>
    </Grid>
</UserControl>
