<UserControl x:Class="View.Widgets.logo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Widgets"
             mc:Ignorable="d" 
             Height="200" Width="200" x:Name="main">
    <Rectangle Width="{Binding ElementName=main, Path=Width}" Height="{Binding ElementName=main, Path=Height}" RadiusY="50" RadiusX="50" Stroke="Black" StrokeThickness="3">
        <Rectangle.Fill>
            <ImageBrush ImageSource="Images/logo.png"/>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>