<UserControl x:Class="View.Widget.SearchItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Widget"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600">
    <Grid x:Name="grid" Background="#f9f9f9" Cursor="Hand" Margin="0 10 0 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding ElementName=grid, Path=Height}"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        <Image x:Name="profile_photo" Source="Images\profile_photo.jpg" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Margin="10" />
        <TextBlock x:Name="text_name" Text="Roman Levkovych" FontSize="28"  Grid.Column="1" Grid.Row="0" Margin="20 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
        <TextBlock x:Name="text_info" Text="Applied Mathematics and Informatics, course 3, group 3" FontSize="18" Grid.Column="1" Grid.Row="1" Margin="20 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
