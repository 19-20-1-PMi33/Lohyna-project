<UserControl x:Class="View.Widget.TimeTableNote_tableNotes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Widget"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="stack" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3">
            
        </StackPanel>
        <TextBlock Text="1 of 3" Grid.Column="1" Grid.Row="1" FontSize="16" TextAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Prev" Grid.Column="0" Grid.Row="1" Width="30" HorizontalAlignment="Right"/>
        <Button Content="Next" Grid.Column="2" Grid.Row="1" Width="30" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
