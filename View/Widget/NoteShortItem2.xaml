<UserControl x:Class="View.Widget.NoteShortItem2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Widget"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="560"
             Height="56">
    <Grid x:Name="grid" Background="#f9f9f9" Margin="0 3 0 3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <CheckBox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Text="10/05/2000" Grid.Column="1" FontSize="15" VerticalAlignment="Center" TextAlignment="Center"/>
        <TextBlock Text="Subject" Grid.Column="2" FontSize="15" VerticalAlignment="Center" TextAlignment="Center"/>
        <TextBlock Text="Title" Grid.Column="3" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <RichTextBox Grid.Column="4" FontSize="15"/>
    </Grid>
</UserControl>
