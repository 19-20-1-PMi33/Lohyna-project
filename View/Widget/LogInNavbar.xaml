<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Widget"
             xmlns:Images="clr-namespace:View.Widget.Images" x:Class="View.Widget.LogInNavbar"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="300">
    <Grid Background="#FF1985DA">
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="125"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.20*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="logo" Source="Images/logo.png" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>
        <TextBox HorizontalAlignment="Left" FontSize="16" Foreground="#959595" Height="30" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Username" Width="250" Margin="25 0 25 0"/>
        <TextBox HorizontalAlignment="Left" FontSize="16" Foreground="#959595" Height="30" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="Password" Width="250" Margin="25 0 25 0"/>
        <Button Content="Log in" Background ="#F9F9F9" FontSize="16"  Grid.Column="1" Height="32" Grid.Row="4" Width="120" HorizontalAlignment="Right" Margin="0 0 25 0">
            <Button.Effect>
                <DropShadowEffect Opacity="0.7" BlurRadius="8"/>
            </Button.Effect>
        </Button>
        <Button Content="Register" Background ="#F9F9F9" FontSize="16" Grid.Column="0" Grid.ColumnSpan="2" Height="32" Grid.Row="4" Width="100" HorizontalAlignment="Left" Margin="25 0 0 0">
            <Button.Effect>
                <DropShadowEffect Opacity="0.7" BlurRadius="8"/>
            </Button.Effect>
        </Button>
        <Button x:Name="button_FAQ" Grid.Row="6" Grid.Column="1" Content="F.A.Q." Background="#FF1985DA" HorizontalAlignment="Left" FontSize="16" BorderBrush="{x:Null}"/>
        <Images:faq_icon x:Name="img_Faq" Grid.Row="6" Grid.Column="0"  Width="50" Height="50"/>
    </Grid>
</UserControl>
