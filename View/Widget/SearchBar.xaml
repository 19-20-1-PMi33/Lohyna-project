<UserControl x:Class="View.Widget.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Widget"
             xmlns:local1="clr-namespace:View.Widget.Images"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="980">
    <Grid Background="#FF1985DA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <local1:search_icon Grid.Column="0" Width="20" Height="20"></local1:search_icon>
        <TextBox Margin="0 8 15 8" Grid.Column="1" Background="#f9f9f9"> </TextBox>
    </Grid>
</UserControl>
