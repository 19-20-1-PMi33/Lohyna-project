<UserControl x:Class="View.Widget.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Widget"
             xmlns:local1="clr-namespace:View.Widget.Images"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="980">
    <Grid Background="#FF1985DA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="950"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <local1:search_icon Grid.Column="0" Grid.Row="0"></local1:search_icon>
        <TextBox x:Name="text_search" Margin="0 8 15 8" Grid.Column="1" Grid.Row="0" Background="#f9f9f9" Height="24" VerticalAlignment="Center" FontSize="16" LostFocus="TextBox_LostFocus"> </TextBox>
        <TextBlock x:Name="block_search" Margin="0 8 15 8" Grid.Column="1" Grid.Row="0" Background="#f9f9f9" Text="Type something to search" VerticalAlignment="Center"  FontSize="16" Foreground="#979797" MouseDown="TextBlock_MouseDown" Cursor="IBeam"></TextBlock>
    </Grid>
</UserControl>
